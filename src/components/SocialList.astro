---
import { Icon } from "astro-icon/components";

/**
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "GitHub",
		link: "https://github.com/dowwie",
		name: "mdi:github",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://linkedin.com/in/darinkgordon",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Twitter",
		link: "https://twitter.com/darin_gordon",
		name: "mdi:twitter",
	},
];
---

<div class="flex flex-wrap items-center gap-4">
	<span class="text-sm font-mono text-[var(--color-muted)]">
		<span class="text-[var(--color-accent)]">></span> connect
	</span>
	<ul class="flex items-center gap-3">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="group relative flex items-center justify-center w-10 h-10 border border-[var(--color-border)] hover:border-[var(--color-accent)] transition-all duration-200 hover:bg-[var(--color-accent)]/10"
						href={link}
						rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon
							aria-hidden="true"
							class="h-5 w-5 text-[var(--color-muted)] group-hover:text-[var(--color-accent)] transition-colors"
							focusable="false"
							name={name}
						/>
						<span class="sr-only">{friendlyName}</span>
						{/* Hover glow effect */}
						<div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity bg-[var(--color-accent)]/5 blur-sm"></div>
					</a>
				</li>
			))
		}
	</ul>
</div>
